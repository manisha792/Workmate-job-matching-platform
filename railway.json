{
  "services": [
    {
      "name": "backend",
      "path": "Backend",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "python app.py",
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/"
      },
      "env": {
        "PORT": "8080",
        "FLASK_ENV": "production"
      }
    },
    {
      "name": "frontend",
      "path": "Frontend",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "npm run start",
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/"
      },
      "env": {
        "VITE_API_URL": "https://workmate-backend-production.up.railway.app"
      }
    }
  ]
}
